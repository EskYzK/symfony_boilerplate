{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} | Liste Commentaires{% endblock %}

{% block body %}
    <div>
        <h1 class="text-3xl font-bold underline m-0">
            Liste Commentaires
        </h1>
    </div>

    <div>
        <ol>
            {% for commentaire in commentaires %}
                <li> {{ commentaire.texte }} </li>
            {% endfor %}
        </ol>
    </div>
{% endblock %}